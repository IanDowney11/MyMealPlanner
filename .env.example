# Supabase Configuration
# Get these values from Supabase Dashboard > Project Settings > API
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Site URL for email confirmations and redirects
VITE_SITE_URL=http://localhost:5173

# Spoonacular API Configuration
# Get your free API key at: https://spoonacular.com/food-api
VITE_SPOONACULAR_API_KEY=your_api_key_here

# Server Configuration (Required for API)
# Get this from Supabase Dashboard > Project Settings > API > service_role
# WARNING: Keep this secret and never expose in client-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
PORT=3002
NODE_ENV=development